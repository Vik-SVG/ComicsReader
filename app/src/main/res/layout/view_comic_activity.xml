<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewComicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/simple_red">

        <View
            android:id="@+id/comic_view_back_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:id="@+id/txt_chapter_name_comic_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/comic_view_back_item"
            android:gravity="center_horizontal"
            android:text="Chapter name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <View
            android:id="@+id/comic_view_next_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_chevron_right_24" />
    </RelativeLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/comic_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>